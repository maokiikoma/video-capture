<Window x:Class="VideoCaptureApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCaptureApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="select file" Margin="5"/>
                <TextBox x:Name="textBoxFileName" Width="200px" Margin="10"/>
                <Button Content="FileOpen" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                <Label Content="out path" Margin="5"/>
                <TextBox x:Name="textBoxOutPath" Width="200px" Text="C:\Users\user\Pictures\capture"/>
                <Label Content="interval" Margin="5"/>
                <TextBox x:Name="textBoxInterval" Width="50px" Text="200"/>
            </StackPanel>
            <Button x:Name="Submit" Content="submit" Click="Submit_Click" Width="100" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
